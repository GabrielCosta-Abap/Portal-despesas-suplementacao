<core:FragmentDefinition
	xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Popover
		id="myPopover"
        placement="Bottom"
        initialFocus="ok"
		title="Justificativa de cancelamento"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
	>
    <footer>
        <OverflowToolbar>
            <ToolbarSpacer/>
            <Button
                id="ok"
                text="Ok"
                press="handleEmailPress" />
        </OverflowToolbar>
    </footer>
        <l:BlockLayout id="BlockLayout" background="Light">
            <l:BlockLayoutRow>
                <l:BlockLayoutCell >
                    <Text
                        id="textoJustificativa"
                        text="{Justificativa}"
                        wrappingType="Hyphenated" />
                </l:BlockLayoutCell>
		</l:BlockLayoutRow>
	</l:BlockLayout>
	</Popover>
</core:FragmentDefinition>
